---
// src/components/Header.astro
const { pathname } = Astro.url;
---

<header>
    <nav>
        <div class="page-links">
            <a href="/" class="logo-link">/</a>
            <a
                href="/credits"
                class:list={{ active: pathname.startsWith("/credits") }}
                >credits</a
            >
            <a
                href="/docs"
                class:list={{ active: pathname.startsWith("/docs") }}>docs</a
            >
            <a
                href="/download"
                class:list={{ active: pathname.startsWith("/download") }}
                >download</a
            >
        </div>

        <div class="social-links">
            <a
                href="https://github.com/standard-group"
                target="_blank"
                class="icon-link"
                aria-label="GitHub"
            >
                <img
                    src="/social/github.svg"
                    alt="GitHub"
                    width="20"
                    height="20"
                />
            </a>
            <a
                href="https://x.com/projectmesa_"
                target="_blank"
                class="icon-link"
                aria-label="Twitter"
            >
                <img
                    src="/social/twitter.svg"
                    alt="Twitter"
                    width="20"
                    height="20"
                />
            </a>
            <a
                href="https://mas.to/@mesa"
                target="_blank"
                class="icon-link"
                aria-label="Mastodon"
            >
                <img
                    src="/social/mastodon.svg"
                    alt="Mastodon"
                    width="20"
                    height="20"
                />
            </a>
            <a
                href="https://discord.gg/Z997UBvFJ4"
                target="_blank"
                class="icon-link"
                aria-label="Discord"
            >
                <img
                    src="/social/discord.svg"
                    alt="Discord"
                    width="20"
                    height="20"
                />
            </a>
            <a
                href="https://donate.projectmesa.qzz.io"
                target="_blank"
                class="icon-link"
                aria-label="Donate"
            >
                <img
                    src="/social/donate.svg"
                    alt="Donate"
                    width="20"
                    height="20"
                />
            </a>
        </div>
    </nav>
</header>

<style>
    header {
        padding: 1.5rem 0;
    }
    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-family: var(--font-mono);
        font-size: 0.9rem;
    }
    .page-links,
    .social-links {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    @media (max-width: 768px) {
        .page-links {
            gap: 1rem;
        }
        .social-links {
            gap: 0.75rem;
        }
    }

    nav a {
        color: var(--color-text-dim);
        text-decoration: none;
        transition: color 0.2s ease;
        display: inline-flex;
        align-items: center;
    }
    nav a:hover,
    nav a.active {
        color: var(--color-text);
    }
    .logo-link {
        background-color: var(--color-accent);
        color: var(--color-bg) !important;
        font-weight: bold;
        width: 24px;
        height: 24px;
        justify-content: center;
        border-radius: 4px;
        text-decoration: none;
    }
    .logo-link:hover {
        background-color: var(--color-accent-dark);
    }
    .icon-link svg {
        transition: transform 0.2s ease;
    }
    .icon-link:hover svg {
        transform: scale(1.1);
    }
</style>
