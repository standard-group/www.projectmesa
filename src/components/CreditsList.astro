<div class="credits-container">
    <div class="intro">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="heart-icon">
            <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
        </svg>
        <p>This tool wouldn't be possible without these people/tools, thank you to everyone involved in the Project Mesa.</p>
    </div>

    {sections.map(section => (
        <section class="credits-section">
            <h2 class="section-title">{section.title}</h2>
            <div class="credits-grid">
                {section.members.map(member => (
                    <a href="#" class="contributor-pill" target="_blank" rel="noopener noreferrer">
                        <img src={member.avatarUrl} alt=`Avatar of ${member.name}` class="contributor-avatar" />
                        <div class="contributor-info">
                            <span class="contributor-name">{member.name}</span>
                            {member.subtext && <span class="contributor-subtext">{member.subtext}</span>}
                        </div>
                    </a>
                ))}
            </div>
        </section>
    ))}
</div>

<style>
    .credits-container {
        max-width: 900px;
        margin: 2rem auto 4rem auto;
    }

    .intro {
        text-align: center;
        margin-bottom: 4rem;
    }

    .heart-icon {
        color: #db8d8d;
        margin-bottom: 1rem;
    }

    .intro p {
        font-size: 1.125rem;
        color: var(--color-text-dim);
        max-width: 500px;
        margin: 0 auto;
    }

    .credits-section {
        margin-bottom: 3rem;
    }

    .section-title {
        font-size: 1.25rem;
        color: var(--color-text);
        margin-bottom: 1.5rem;
        font-weight: 700;
    }

    .credits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 0.75rem;
    }

    .contributor-pill {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        background-color: var(--color-card-bg);
        border: 1px solid var(--color-card-border);
        padding: 0.5rem 0.75rem;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.2s ease-in-out;
    }

    .contributor-pill:hover {
        border-color: #555;
        background-color: #2a2a2a;
        transform: translateY(-2px);
    }

    .contributor-avatar {
        width: 32px;
        height: 32px;
        border-radius: 6px;
        object-fit: cover;
        flex-shrink: 0;
    }

    .contributor-info {
        display: flex;
        flex-direction: column;
        line-height: 1.3;
    }
    
    .contributor-name {
        color: var(--color-text);
        font-size: 0.9rem;
        font-weight: 500;
    }

    .contributor-subtext {
        font-size: 0.8rem;
        color: var(--color-text-dim);
    }
</style>